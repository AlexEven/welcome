<div class="onboarding advancement" style="display: none">
    <div class="col-md-12">
        {% for group in steps.groups %}
            <div class="progress-group group-{{ loop.index0 }}" style="width: {{ (group.steps|length / totalSteps) * 100 }}%;">
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 0%;"></div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="col-md-8">
        <h4 class="group-title"></h4>
        <div class="step-title"></div>
    </div>
    <div class="col-md-4 text-right">
        <div>
            <button class="btn btn-primary onboarding-button-next">{{ generic.continue }}</button>
        </div>
        <div>
            <button class="btn btn-xs onboarding-button-shut-down">{{ generic.setShutDown }}</button>
        </div>
    </div>
</div>

<script type="text/javascript">

    var onBoarding;

    $(function(){

        {% autoescape false %}
            onBoarding = new OnBoarding({{ currentStep }}, {{ jsonSteps }}, {{ isShutDown }}, baseDir, baseAdminDir);

            {% for template in templates %}
                onBoarding.addTemplate('{{ template.name }}', '{{ template.content|replace({"\n":'', "\r":''}) }}');
            {% endfor %}
        {% endautoescape %}

        onBoarding.showCurrentStep();

        $(".onboarding-button-next").on("click", function(){
            onBoarding.gotoNextStep();
        });

        $(".onboarding-button-shut-down").on("click", function(){
            onBoarding.setShutDown(true);
        });

        $(".onboarding-button-resume").on("click", function(){
            onBoarding.setShutDown(false);
        });

        $(".onboarding-button-goto-current").on("click", function(){
            onBoarding.gotoLastSavePoint();
        });

    });

</script>
